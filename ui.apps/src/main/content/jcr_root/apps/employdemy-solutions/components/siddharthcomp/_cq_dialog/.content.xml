<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="siddharthcomp"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="single-front-door.validations"
    mode="edit">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <textfield
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Text tab"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                        <topText
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Enter the heading text"
                                            fieldLabel="Enter the Heading text"
                                            name="./guideTopText"/>
                                        <bottomtext
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Enter the text at the bottom of the component"
                                            fieldLabel="Enter the Bottom text"
                                            name="./guideBottomText"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </textfield>
                    <iconItems
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Icon items"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <iconTextItems
                                                granite:class="sfd-multifield"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldDescription="Author the content for Multiple Icon text items"
                                                fieldLabel="Author the Icon text items"
                                                validation="sfd-multifield">
                                                <granite:data jcr:primaryType="nt:unstructured"/>
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    jcr:title="Click to expand item"
                                                    sling:resourceType="granite/ui/components/foundation/container"
                                                    name="./guideRelevantList">
                                                    <layout
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/layouts/collapsible"/>
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <iconImage
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                    fieldDescription="Drag and drop the Image"
                                                                    fieldLabel="Upload an Image"
                                                                    fileNameParameter="./fileName"
                                                                    fileReferenceParameter="./guideListImage"
                                                                    name="./exploreResourcesCardPic"/>
                                                                <iconImageAltText
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Enter the Image Alt Text"
                                                                    fieldLabel="Enter the Image Alt Text"
                                                                    maxlength="50"
                                                                    name="./iconImageAltText"/>
                                                                <iconText
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Enter the text next to the Icon"
                                                                    fieldLabel="Enter the Icon text "
                                                                    name="./guideText"/>
                                                            </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </iconTextItems>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </iconItems>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>